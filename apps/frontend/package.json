{
  "name": "@svg-edit/frontend",
  "version": "0.1.0",
  "description": "Web-based SVG editor with visual canvas, hierarchy panel, and attribute inspector",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test && npm run test:e2e",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "svg",
    "editor",
    "web-components",
    "visual-editor"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@svg-edit/core": "file:../../packages/core"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.1.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "fast-check": "^3.15.0",
    "jsdom": "^27.4.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
